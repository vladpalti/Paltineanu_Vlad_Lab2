@page
@model Paltineanu_Vlad_Lab2.Pages.Books.Borrowings.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Borrowing</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Borrowing.ID" />

            <!-- Member dropdown with names -->
            <div class="form-group">
                <label asp-for="Borrowing.MemberID" class="control-label"></label>
                <select asp-for="Borrowing.MemberID" class="form-control" asp-items="@(ViewData["MemberID"] as IEnumerable<SelectListItem>)"></select>
                <span asp-validation-for="Borrowing.MemberID" class="text-danger"></span>
            </div>

            <!-- Book dropdown with titles -->
            <div class="form-group">
                <label asp-for="Borrowing.BookID" class="control-label"></label>
                <select asp-for="Borrowing.BookID" class="form-control" asp-items="@(ViewData["BookID"] as IEnumerable<SelectListItem>)"></select>
                <span asp-validation-for="Borrowing.BookID" class="text-danger"></span>
            </div>

            <!-- Return Date -->
            <div class="form-group">
                <label asp-for="Borrowing.ReturnDate" class="control-label"></label>
                <input asp-for="Borrowing.ReturnDate" class="form-control" />
                <span asp-validation-for="Borrowing.ReturnDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
